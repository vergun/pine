<div class="container">
  <div class="row">
  
    <table class='table table-hover'>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <a href="/article/new" class="btn btn-sm btn-primary">New article</a>
      <tbody class="table-hover">
        <% _.each(files, function(file) { %>
        <tr>
          <td><%= file %></td>        
    			<td><form action="/article/show" method="POST">
    				<input type="hidden" name="file" value="<%= file %>"/>
    				<input type="submit" class="btn btn-sm btn-primary" value="Show"/>
    				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
    			</form></td>
      		<td><form action="/article/edit" method="POST">
      			<input type="hidden" name="file" value="<%= file %>"/>
      			<input type="submit" class="btn btn-sm btn-warning" value="Edit"/>
      			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
      		</form></td>
        </tr>
        <% }) %>
      </tbody
    </table>
      
  </div>
</div>
