<%= include ../modals/_commit %>


<div class="container">
  <div class="row">

    <div class="col-md-9">
        <div class="tab-content">
          <%= include _breadcrumbs %>
          <%= include _headers %>
          <hr>
          <h3>Content</h3>
          <% if (typeof(edit) != "undefined" && edit) { %>
            <div class="editable">
              <%- article.content %>
             </div>
          <% } else { %>
            <div class="not-editable">
              <%- article.content %>
            </div>
          <% } %>
        </div>
    </div>
    
    <div class="col-md-3">
      <%= include _sidebar %>
    </div>

  </div>
</div>