<script type="text/html" id="rows-template">

{{ if ( child.type == "folder" || child.name.indexOf(".md") != -1){  }}

<ul class="article-list" style="display:block;">
  <li class="{{= child.type }}" data-path="{{= child.path }}" data-has-been-opened="false">
  
    
    {{ if (child.type == "folder"){ }}
      <i class="icon-expand-alt switch"></i><i class="icon-folder-close"></i>
    {{ } }}
    
    {{ if ( child.type == "file" ){ }}
      <i class="icon-file"></i>
    {{ } }}
    
    {{= child.name }}
    
    <span class="article-buttons">
      <a href="/article/show?path={{= child.path }}" class="btn btn-mini btn-primary">Show</a>
    
    {{ if (response.user && typeof response.user != "undefined"){ }}
      <a href="/article/edit?path={{= child.path }}" class="btn btn-mini btn-warning">Edit</a>
      <a href="/article/destroy?path={{= child.path }}" class="btn btn-mini btn-danger">Destroy</a>
      <a href="#" data-toggle="modal" data-target="#copyArticle" class="btn btn-mini btn-warning copy-article">Copy</a>
      <a href="#" data-toggle="modal" data-target="#moveArticle" class="btn btn-mini btn-warning move-article">Move</a>      
    {{ } }}
    
    </span>
  </li>
</ul>

{{ } }}

</script>