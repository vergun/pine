<div id="save_dialog" class="modal hide fade">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Save file</h3>
    </div>
    
    <form action="/article/save" method="POST" role="form">
    
        <div class="modal-body">
          <input id="save-file-name" type="text" placeholder="filename" name="filename" />
        </div>
        
      <div class="modal-footer">
          <a href="#" class="btn" data-dismiss="modal">Cancel</a>
      	  <button type="submit" id="save-file-action" class="btn btn-primary">Save</button>
      	  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </div>
      
    </form>
    
</div>


