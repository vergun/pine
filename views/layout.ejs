<!DOCTYPE html>
<html>
	<head>
		<title><%- title %></title>

		<!-- Viewport mobile tag for sensible mobile support -->
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <% if (process.env.NODE_ENV === 'development') { %>
  		<script src="/js/jquery.js"></script>
  		<script src="/js/bootstrap.js"></script>
    <% } else { %>
  	  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  		<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <% } %>
    
		<!--STYLES-->
<link rel="stylesheet" href="/linker/styles/bootstrap.css">
<link rel="stylesheet" href="/linker/styles/font-awesome.css">
<link rel="stylesheet" href="/linker/styles/hallo.css">
<link rel="stylesheet" href="/linker/styles/jquery-ui.css">
<link rel="stylesheet" href="/linker/styles/style.css">
<!--STYLES END-->
	</head>

	<body>
  
  <% var nav = {}; nav[selected] = 'active' %>
  
  <div class="navbar">
      <div class="navbar-inner">
          <div class="container">
              <a class="brand" href="#">SugarCRM</a>
              <ul class="nav navbar-nav">
                <% if (session.authenticated) { %>
                <li class="<%= nav.editProfile %>"><a href="/user/show/<%= user.id %>"><%= user.name %></a></li>            
                <% } %>
                <li class="<%= nav.article %>"><a href="/">Articles</a></li>
                
                <% if (session.authenticated) { %>         
                  <% if (user.admin) { %>
                    <li class="<%= nav.user %>"><a href="/user">Users</a></li>
                  <% } %>         
                <% } %>
              </ul>
              <div class=".pull-right">
                <% if (session.authenticated) { %>
                  <a class="btn btn-default navbar-btn pull-right" href="/session/destroy">Sign-out</a>
                <% } %>
              </div>
              
              <% if (!session.authenticated) { %>
                <form class="navbar-form pull-right form-inline" action="/session/create">
                  <input type="text" placeholder="Email" name="email" class="form-control">
                  <input type="password" placeholder="Password" name="password" class="form-control">
                  <button type="submit" class="btn btn-success">Sign in</button>
                  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                </form>
              <% } %>
          </div>
      </div>
  </div>
  
		<%- body %>

		<!-- Templates from your view path are included here -->
		<!--TEMPLATES-->

<!--TEMPLATES END-->
		<!-- Javascripts from your assets folder are included here -->
		<!--SCRIPTS-->

<!--SCRIPTS END-->
	</body>
</html>